<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1 class="jumbotron">URL Shortener</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">Url</label>
            <input type="url" name="fullUrl" id="fullUrl" required placeholder="url" class="form-control mr-2 col">
            <button class="btn btn-dark" type="submit">Shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Code</th>
                    <th>Clicks</th>
                    <th>Date</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                        <td><%= shortUrl.date %></td>
                        <td><form action="/delete" method="POST"><button type="submit" value="<%= shortUrl.short %>" name="delete" class="btn btn-light"><b>x</b></button></form></td>
                    </tr>
                <% }) %>   
            </tbody>
        </table>
    </div>
    <footer class="mt-5 p-3 text-center btn-dark">1620 &copy; Himansh</footer>
</body>
</html>